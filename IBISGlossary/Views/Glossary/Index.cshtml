@model IEnumerable<IBISGlossary.Model.Glossary>
@{
    ViewBag.Title = "Glossary";
}

<div class="container my-1">
    <main role="main" class="pb-1">
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header bg-light text-light ml-0 row container">
                    <div class="col-12 col-md-6">
                        <h6 class="text-primary">Glossary Filters</h6>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-1">
                        <div class="row">
                            <div class="col-12 col-lg-12">
                                <div class="row">
                                    <div class="col-12">
                                        <form id="frmsearch">
                                            <div class="form-row">
                                                <div class="form-group col-md-4">
                                                    <label for="txtTerm">Term</label>
                                                    <input type="text" class="form-control" id="txtTerm" placeholder="Term">
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1">
                            <button class="btn btn-success form-control  btn-square btn-lg" id="btnsearch" style="height:50px;">
                                <i class="fa fa-search"></i>&nbsp;Search
                            </button>
                        </div>
                        <div class="col-12 col-md-6 pb-1">
                            <button class="btn btn-primary btn-square form-control btn-lg" id="btnclear" style="height:50px;">Clear filters</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header bg-light text-light ml-0 row container">
                    <div class="col-12 col-md-6">
                        <h6 class="text-primary">Glossary list</h6>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="table-responsive">
                                <table id="tblGlossary" class="table table-striped table-bordered table-sm">
                                    <thead>
                                        <tr>
                                            <th>
                                                Term
                                            </th>
                                            <th>
                                                Definition
                                            </th>
                                            <th>
                                                
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            loadGlossary();
        });

        $("#btnsearch").click(function () {
            loadGlossaryByParams();
        });

        $("#btnclear").click(function () {
            $('#frmsearch')[0].reset();
            loadGlossaryByParams();
        });
    </script>
}
